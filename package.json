{
  "name": "hex-io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@hexio/eslint-config": "workspace:*",
    "@hexio/typescript-config": "workspace:*",
    "prettier": "^3.8.1",
    "turbo": "^2.8.1",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "csstype": "3.2.3"
  }
}
